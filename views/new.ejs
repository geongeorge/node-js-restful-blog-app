<% include ./parts/head %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog Post</div>
  <form action="/blogs" method="post" class="ui form">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="Title Here">
    </div>

    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="Image URL Here">
    </div>

    <div class="field">
      <label>Blog Content</label>
      <textarea placeholder="Body here" name="blog[body]" id="" cols="30" rows="10"></textarea>
    </div>

    <input type="submit" class="ui yellow basic button" />
  </form>
</div>
<% include ./parts/foot %>
